<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/RVFragment">

    <fragment
            android:id="@+id/RVFragment"
            android:name="com.example.cryptocurrencyviewer.presentation.RVFragment"
            android:label="Top 30 cryptos"
            tools:layout="@layout/recycler_view_fragment">
        <action
                android:id="@+id/action_RVFragment_to_DetailsFragment"
                app:destination="@id/DetailsFragment" />
    </fragment>

    <fragment
            android:id="@+id/DetailsFragment"
            android:name="com.example.cryptocurrencyviewer.presentation.DetailsFragment"
            android:label="Crypto details"
            tools:layout="@layout/details_fragment" />
</navigation>
